<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <!-- Top toolbar with status and debug toggle -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1A1A1A"
        android:padding="8dp"
        android:paddingTop="32dp"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/statusText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ready"
            android:textColor="#00FF00"
            android:textSize="14sp"
            android:fontFamily="monospace" />

        <Button
            android:id="@+id/debugToggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEBUG"
            android:textSize="12sp"
            android:padding="4dp"
            android:minHeight="0dp"
            android:minWidth="0dp" />

    </LinearLayout>

    <!-- Debug panel (collapsible) - contains IQ Analysis, Waveform, Spectrum -->
    <ScrollView
        android:id="@+id/debugPanel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#0A0A0A"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/topBar"
        app:layout_constraintBottom_toTopOf="@+id/vdiDisplayView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- IQ Analysis table -->
            <TextView
                android:id="@+id/toneAnalysisText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IQ Analysis will appear here"
                android:textColor="#00FFFF"
                android:textSize="10sp"
                android:fontFamily="monospace"
                android:padding="8dp" />

            <!-- Waveform -->
            <com.example.fcmd.WaveformView
                android:id="@+id/waveformView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="8dp" />

            <!-- Spectrum overlay -->
            <com.example.fcmd.SpectrumView
                android:id="@+id/spectrumView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="-200dp"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

    <!-- Central VDI Display (large and prominent) -->
    <com.example.fcmd.VDIDisplayView
        android:id="@+id/vdiDisplayView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#1A1A1A"
        app:layout_constraintTop_toBottomOf="@+id/topBar"
        app:layout_constraintBottom_toTopOf="@+id/controlPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_weight="1" />

    <!-- Control Panel at bottom -->
    <ScrollView
        android:id="@+id/controlPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#0A0A0A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Ground Balance Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GROUND BALANCE"
                android:textColor="#00FFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mode:"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp"
                    android:minWidth="80dp" />

                <Spinner
                    android:id="@+id/gbModeSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"
                    android:popupBackground="@color/spinner_dropdown_background"
                    android:spinnerMode="dropdown"
                    android:minHeight="48dp" />

                <Button
                    android:id="@+id/gbPumpButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PUMP"
                    android:enabled="false"
                    android:layout_marginStart="8dp"
                    android:textSize="14sp"
                    android:padding="8dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Offset:"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp" />

                <SeekBar
                    android:id="@+id/gbOffsetSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="50"
                    android:enabled="false"
                    android:thumb="@drawable/seekbar_thumb" />

                <TextView
                    android:id="@+id/gbOffsetText"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:gravity="end"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333333"
                android:layout_marginVertical="8dp" />

            <!-- Bluetooth Target Audio Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BLUETOOTH TARGET AUDIO"
                android:textColor="#00FFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Audio:"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp"
                    android:minWidth="60dp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/audioFeedbackSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Haptic:"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/hapticFeedbackSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false" />

                <TextView
                    android:id="@+id/audioRoutingText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Phone Audio"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp"
                    android:gravity="end"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Volume:"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp" />

                <SeekBar
                    android:id="@+id/audioFeedbackVolumeSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="80"
                    android:thumb="@drawable/seekbar_thumb" />

                <TextView
                    android:id="@+id/audioFeedbackVolumeText"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="80%"
                    android:textColor="#FFFFFF"
                    android:gravity="end"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333333"
                android:layout_marginVertical="8dp" />

            <!-- Detection Mode Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DETECTION MODE"
                android:textColor="#00FFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="MaxF:"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp" />

                <SeekBar
                    android:id="@+id/frequencySeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="1000"
                    android:progress="1000"
                    android:thumb="@drawable/seekbar_thumb" />

                <TextView
                    android:id="@+id/frequencyText"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="20000"
                    android:textColor="#FFFFFF"
                    android:gravity="end"
                    android:singleLine="true"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Tones:"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp" />

                <SeekBar
                    android:id="@+id/toneCountSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="23"
                    android:progress="23"
                    android:thumb="@drawable/seekbar_thumb" />

                <TextView
                    android:id="@+id/toneCountText"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="24"
                    android:textColor="#FFFFFF"
                    android:gravity="end"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="TX Level:"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp" />

                <SeekBar
                    android:id="@+id/volumeSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="100"
                    android:thumb="@drawable/seekbar_thumb" />

                <TextView
                    android:id="@+id/volumeText"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="100%"
                    android:textColor="#FFFFFF"
                    android:gravity="end"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333333"
                android:layout_marginVertical="8dp" />

            <!-- Start/Stop Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/startButton"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="START"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_margin="4dp"
                    android:backgroundTint="#00AA00" />

                <Button
                    android:id="@+id/stopButton"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="STOP"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:enabled="false"
                    android:layout_margin="4dp"
                    android:backgroundTint="#AA0000" />

                <Button
                    android:id="@+id/infoButton"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="INFO"
                    android:textSize="18sp"
                    android:layout_margin="4dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
