<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".InfoActivity">

    <!-- Theme Selector Section -->
    <LinearLayout
        android:id="@+id/themeSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#1E1E1E"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UI THEME"
            android:textColor="#4CAF50"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/currentThemeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current: Modern"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/themeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clean, modern interface with high contrast"
            android:textColor="#B0B0B0"
            android:textSize="12sp"
            android:paddingBottom="12dp" />

        <Spinner
            android:id="@+id/themeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:background="@drawable/spinner_background"
            android:popupBackground="#2D2D2D" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Changes take effect immediately"
            android:textColor="#808080"
            android:textSize="11sp"
            android:paddingTop="8dp"
            android:fontStyle="italic" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#4CAF50"
        app:layout_constraintTop_toBottomOf="@id/themeSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/hardwareInfoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textColor="#00FF00"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:padding="8dp" />

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
