<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <!-- Top toolbar with status and debug toggle -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1A1A1A"
        android:padding="@dimen/top_bar_padding"
        android:paddingTop="@dimen/spacing_small"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/statusText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ready"
            android:textColor="#00FF00"
            android:textSize="@dimen/text_size_small"
            android:fontFamily="monospace" />

        <Button
            android:id="@+id/debugToggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEBUG"
            android:textSize="@dimen/text_size_tiny"
            android:padding="@dimen/spacing_tiny"
            android:minHeight="0dp"
            android:minWidth="0dp" />

    </LinearLayout>

    <!-- Debug panel (collapsible) - horizontal layout for landscape -->
    <HorizontalScrollView
        android:id="@+id/debugPanel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#0A0A0A"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/vdiDisplayView"
        app:layout_constraintWidth_percent="0.4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- IQ Analysis table -->
            <TextView
                android:id="@+id/toneAnalysisText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IQ Analysis will appear here"
                android:textColor="#00FFFF"
                android:textSize="@dimen/text_size_tiny"
                android:fontFamily="monospace"
                android:padding="@dimen/spacing_small" />

            <!-- Waveform and Spectrum container -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="@dimen/spacing_small">

                <!-- Waveform -->
                <com.example.fcmd.WaveformView
                    android:id="@+id/waveformView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- Spectrum overlay -->
                <com.example.fcmd.SpectrumView
                    android:id="@+id/spectrumView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Central VDI Display (fills entire screen in landscape) -->
    <com.example.fcmd.VDIDisplayView
        android:id="@+id/vdiDisplayView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#1A1A1A"
        app:layout_constraintTop_toBottomOf="@+id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Control Panel overlays on right side for landscape -->
    <ScrollView
        android:id="@+id/controlPanel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#DD0A0A0A"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@+id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_small">

            <!-- Ground Balance Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GROUND BALANCE"
                android:textColor="#00FFFF"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/spacing_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/spacing_small">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mode:"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginEnd="@dimen/spacing_tiny"
                    android:minWidth="@dimen/label_min_width_small" />

                <Spinner
                    android:id="@+id/gbModeSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"
                    android:popupBackground="@color/spinner_dropdown_background"
                    android:spinnerMode="dropdown"
                    android:minHeight="@dimen/button_height_normal" />

                <Button
                    android:id="@+id/gbPumpButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PUMP"
                    android:enabled="false"
                    android:layout_marginStart="@dimen/spacing_tiny"
                    android:textSize="@dimen/text_size_small"
                    android:padding="@dimen/spacing_tiny" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/spacing_small">

                <TextView
                    android:layout_width="@dimen/label_min_width_small"
                    android:layout_height="wrap_content"
                    android:text="Offset:"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginEnd="@dimen/spacing_tiny" />

                <SeekBar
                    android:id="@+id/gbOffsetSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="50"
                    android:enabled="false"
                    android:thumb="@drawable/seekbar_thumb" />

                <TextView
                    android:id="@+id/gbOffsetText"
                    android:layout_width="@dimen/label_min_width_small"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/text_size_small"
                    android:gravity="end"
                    android:layout_marginStart="@dimen/spacing_tiny" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333333"
                android:layout_marginVertical="@dimen/spacing_tiny" />

            <!-- Bluetooth Target Audio Section (Compact for landscape) -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TARGET AUDIO"
                android:textColor="#00FFFF"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/spacing_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/spacing_small">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Audio:"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginEnd="@dimen/spacing_tiny" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/audioFeedbackSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Haptic:"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:layout_marginEnd="@dimen/spacing_tiny" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/hapticFeedbackSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/spacing_small">

                <TextView
                    android:layout_width="@dimen/label_min_width_small"
                    android:layout_height="wrap_content"
                    android:text="Vol:"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginEnd="@dimen/spacing_tiny" />

                <SeekBar
                    android:id="@+id/audioFeedbackVolumeSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="80"
                    android:thumb="@drawable/seekbar_thumb" />

                <TextView
                    android:id="@+id/audioFeedbackVolumeText"
                    android:layout_width="@dimen/label_min_width_small"
                    android:layout_height="wrap_content"
                    android:text="80%"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/text_size_small"
                    android:gravity="end"
                    android:layout_marginStart="@dimen/spacing_tiny" />

            </LinearLayout>

            <TextView
                android:id="@+id/audioRoutingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Audio"
                android:textColor="#AAAAAA"
                android:textSize="@dimen/text_size_tiny"
                android:gravity="center"
                android:layout_marginBottom="@dimen/spacing_small" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333333"
                android:layout_marginVertical="@dimen/spacing_tiny" />

            <!-- Detection Mode Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DETECTION MODE"
                android:textColor="#00FFFF"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/spacing_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/spacing_small">

                <TextView
                    android:layout_width="@dimen/label_min_width_small"
                    android:layout_height="wrap_content"
                    android:text="MaxF:"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginEnd="@dimen/spacing_tiny" />

                <SeekBar
                    android:id="@+id/frequencySeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="1000"
                    android:progress="1000"
                    android:thumb="@drawable/seekbar_thumb" />

                <TextView
                    android:id="@+id/frequencyText"
                    android:layout_width="@dimen/label_min_width_small"
                    android:layout_height="wrap_content"
                    android:text="20000"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/text_size_small"
                    android:gravity="end"
                    android:singleLine="true"
                    android:layout_marginStart="@dimen/spacing_tiny" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/spacing_small">

                <TextView
                    android:layout_width="@dimen/label_min_width_small"
                    android:layout_height="wrap_content"
                    android:text="Tones:"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginEnd="@dimen/spacing_tiny" />

                <SeekBar
                    android:id="@+id/toneCountSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="23"
                    android:progress="23"
                    android:thumb="@drawable/seekbar_thumb" />

                <TextView
                    android:id="@+id/toneCountText"
                    android:layout_width="@dimen/label_min_width_small"
                    android:layout_height="wrap_content"
                    android:text="24"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/text_size_small"
                    android:gravity="end"
                    android:layout_marginStart="@dimen/spacing_tiny" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/spacing_small">

                <TextView
                    android:layout_width="@dimen/label_min_width_small"
                    android:layout_height="wrap_content"
                    android:text="TX Level:"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginEnd="@dimen/spacing_tiny" />

                <SeekBar
                    android:id="@+id/volumeSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="100"
                    android:thumb="@drawable/seekbar_thumb" />

                <TextView
                    android:id="@+id/volumeText"
                    android:layout_width="@dimen/label_min_width_small"
                    android:layout_height="wrap_content"
                    android:text="100%"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/text_size_small"
                    android:gravity="end"
                    android:layout_marginStart="@dimen/spacing_tiny" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333333"
                android:layout_marginVertical="@dimen/spacing_tiny" />

            <!-- Start/Stop Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/startButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height_normal"
                    android:layout_weight="1"
                    android:text="START"
                    android:textSize="@dimen/text_size_normal"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/spacing_tiny"
                    android:backgroundTint="#00AA00" />

                <Button
                    android:id="@+id/stopButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height_normal"
                    android:layout_weight="1"
                    android:text="STOP"
                    android:textSize="@dimen/text_size_normal"
                    android:textStyle="bold"
                    android:enabled="false"
                    android:layout_margin="@dimen/spacing_tiny"
                    android:backgroundTint="#AA0000" />

                <Button
                    android:id="@+id/infoButton"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height_normal"
                    android:layout_weight="1"
                    android:text="INFO"
                    android:textSize="@dimen/text_size_normal"
                    android:layout_margin="@dimen/spacing_tiny" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
